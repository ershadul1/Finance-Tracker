<section class="login">
  <div class="nav-container">
      <nav class="nav-bar">
        <%= link_to 'FINANCE TRACKER', transactions_path, class: 'nav-link'%>
        <%= link_to "Sign up", new_registration_path(resource_name), class: 'nav-link' %>
      </nav>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
    
    <div>
      <div class="form-container actions">
        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: 'form-fields' %>
        </div>
        
        <div class="field">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: 'form-fields' %>
        </div>
        
        <div class="group-container">
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'nav-link color-red' %>
        </div>  
    </div>

    <div class="actions new-item">
      <%= f.submit "Log in" , class: 'submit-btn'%>
    </div>
    

  <% end %>
</section>